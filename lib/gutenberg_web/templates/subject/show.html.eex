<div class="main__container">
  <h1><%= gettext("Books related to ") <> "\'#{@subject.name}\'" %></h1>

  <%= for book <- @subject.books do %>
    <div class="card" class="_result_card">
      <div class="card-body">
        <div class="card-title">
          <%= link(book.title, to: book_path(@conn, :show, locale(), book)) %>
        </div>
        <div class="card-subtitle">
          <%= Gutenberg.Db.Book.author_name(book) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

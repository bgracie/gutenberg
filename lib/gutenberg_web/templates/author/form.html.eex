<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :year_of_birth, class: "control-label" %>
    <%= number_input f, :year_of_birth, class: "form-control" %>
    <%= error_tag f, :year_of_birth %>
  </div>

  <div class="form-group">
    <%= label f, :year_of_death, class: "control-label" %>
    <%= number_input f, :year_of_death, class: "form-control" %>
    <%= error_tag f, :year_of_death %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
